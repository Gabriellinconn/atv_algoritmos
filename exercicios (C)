14) gasolina

#include <stdio.h>
#include <locale.h>

main (){
	
	setlocale(LC_ALL, "portuguese");
	
	float l_gasolina,l_alcool, preco_g, preco_a;
	
	
	printf("Digite quantos litros foram abastecidos de Gasolina?");
	scanf("%f", &l_gasolina);
	
		printf("Digite quantos litros foram abastecidos de Álcool?");
	scanf("%f", &l_alcool);
	
	preco_g=l_gasolina*4.96;
	
	if (l_gasolina<20){
		preco_g=preco_g-0.035;
	}
	
	else if (l_gasolina>20){
		preco_g=preco_g-0.06;
	}
	
	preco_a=l_alcool*4.45;
	
		if (l_alcool<20){
		preco_a=preco_a-0.03;
	}
	
	else if (l_alcool>20){
		preco_a=preco_a-0.5;
	}
		printf("De alcool ficou %d e de gasolina ficou %d", preco_a, preco_g);
	

		
	
	
		
	

	return 0;
}

