#include <stdio.h>
#include <locale.h>

main (){
	
	setlocale(LC_ALL, "portuguese");
	
	int num1, num2, num3, menor;
	
	printf("insira o PRIMEIRO número: ");
	scanf("%d", &num1);	
	
	menor= num1;

	printf("insira o SEGUNDO número: ");
	scanf("%d", &num2);	
	
		if (menor>num2){
		menor= num2;
	}

	printf("insira o TERCEIRO número: ");
	scanf("%d", &num3);	
	
		if (menor>num3){
		menor= num3;
}
	printf("O menor número dos quais você insiriu é %d", menor);
	

	return 0;
}

