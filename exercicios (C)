10) cópias:

#include <stdio.h>
#include <locale.h>

main(){
	
	setlocale (LC_ALL, "portuguese");
	
	int copias;
	float custo;
	
		printf("Quantas cópias foram impressas?: ");
		scanf("%d", &copias);
		
		
		
		if (copias<=100){
		custo=copias*0.25;
		}
		
		else {
		custo = 100*0.25 //ou 25 que é o preço das 100 primeiras cópias//
		 + (copias-100)*0.20;
		}
		
		printf("o Valor a ser pago pelas %d cópias, será de R$%.2f", copias, custo);
	
	return 0;
}

